<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragments.SeatBookingFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_25">

        <TextView
            android:id="@+id/tvFilmyPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/concert_one"
            android:text="How Many Seat??"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivVehicle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/bicycle" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollIndicators="none">

            <RadioGroup
                android:id="@+id/rgSeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/seat1"
                    style="@style/circleButton"
                    android:text="1" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/seat2"
                    style="@style/circleButton"
                    android:text="2" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/seat3"
                    style="@style/circleButton"
                    android:text="3" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/seat4"
                    style="@style/circleButton"
                    android:text="4" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/seat5"
                    style="@style/circleButton"
                    android:text="5" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/seat6"
                    style="@style/circleButton"
                    android:text="6" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/seat7"
                    style="@style/circleButton"
                    android:text="7" />

            </RadioGroup>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvClassNameSeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Name"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvSeatPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="â‚¹220.00"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Available"
                android:textColor="@color/light_green"
                android:textSize="16sp" />

        </LinearLayout>


        <Button
            android:id="@+id/btnNextPayment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/dp_50"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/dp_50"
            android:background="@drawable/rounded_corners"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/light_green"
            android:textSize="22sp" />

    </LinearLayout>
</layout>
