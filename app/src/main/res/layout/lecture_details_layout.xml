<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/crdLecture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_10">

        <RelativeLayout
            android:id="@+id/rlClassItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10">

            <androidx.cardview.widget.CardView
                android:id="@+id/crdLogo"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                app:cardCornerRadius="@dimen/dp_40">

                <ImageView
                    android:id="@+id/ivClassLogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/engineer" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvClassName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@id/crdLogo"
                android:text="Coaching Name"
                android:textColor="@color/light_green"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLectureDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvClassName"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toEndOf="@id/crdLogo"
                android:fontFamily="@font/poppins_medium"
                android:text="Lecture Date/Time"
                android:textColor="@color/primaryDark"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvClassLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLectureDateTime"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_toEndOf="@id/crdLogo"
                android:fontFamily="@font/poppins_medium"
                android:text="Coaching Place"
                android:textColor="@color/primaryDark"
                android:textSize="17sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>