<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:orientation="vertical"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvClassNameDisplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:text="class name" />

            <TextView
                android:id="@+id/tvSelectLang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Select Language"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/rgSelectLanguage"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rBtnHindiLng"
                    android:layout_width="wrap_content"
                    android:text="Hindi"
                    android:paddingStart="@dimen/dp_20"
                    android:fontFamily="@font/basic"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/rBtnEngLng"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/dp_50"
                    android:text="English"
                    android:paddingStart="@dimen/dp_20"
                    android:layout_height="wrap_content"/>

            </RadioGroup>

            <TextView
                android:id="@+id/tvRoomFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Select Format"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/rgSelectFormat"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rBtnAcClass"
                    android:layout_width="wrap_content"
                    android:text="Ac"
                    android:paddingStart="@dimen/dp_20"
                    android:fontFamily="@font/basic"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/rBtnNonAcClass"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/dp_50"
                    android:text="Non Ac"
                    android:paddingStart="@dimen/dp_20"
                    android:layout_height="wrap_content"/>

            </RadioGroup>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                android:background="@drawable/btn_book_bg"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/next"
                android:layout_marginTop="@dimen/dp_20"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textColor="@color/primaryDark"
                android:textSize="22sp"
                android:visibility="visible" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>