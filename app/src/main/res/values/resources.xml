<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="circleViewImage">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
    </style>

    <style name="selectionTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="background">@drawable/btnshape</item>
        <item name="android:fontFamily">@font/basic</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tvClassDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@color/gray</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primaryDark</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
    </style>


</resources>